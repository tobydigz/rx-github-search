<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/repository_view_padding"
    android:orientation="vertical">

    <ng.gdg.devfestsw.rxgithubsearch.views.TextView
        android:id="@+id/repository_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/repository_title_text_size"
        android:textColor="@color/repository_title_text_color"
        custom:textViewFont="CircularStd-Bold.otf" />

    <ng.gdg.devfestsw.rxgithubsearch.views.TextView
        android:id="@+id/repository_url_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/repository_url_text_size"
        android:textColor="@color/repository_url_text_color"
        custom:textViewFont="CircularStd-Book.otf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/repository_view_separator_height"
        android:layout_marginTop="@dimen/repository_view_separator_margin_top"
        android:layout_marginStart="@dimen/repository_view_separator_margin"
        android:layout_marginEnd="@dimen/repository_view_separator_margin"
        android:background="@color/repository_view_separator_color" />

</LinearLayout>